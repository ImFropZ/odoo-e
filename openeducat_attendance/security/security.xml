<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Teacher Group For Attendance -->
  <record id="group_attendance_teacher" model="res.groups">
    <field name="name">Teacher</field>
    <field name="category_id" ref="module_category_openeducat_attendance" />
    <field name="implied_ids"
      eval="[(4, ref('openeducat_core.group_school_teacher'))]" />
  </record>

  <!-- Group Teacher -->
  <record id="openeducat_core.group_school_teacher" model="res.groups">
    <field name="implied_ids"
      eval="[(4, ref('openeducat_attendance.group_attendance_teacher'))]" />
  </record>

  <!-- Teacher Rule -->
  <record id="teacher_attendance_sheet_rule" model="ir.rule">
    <field name="name">Teacher Attendance Sheet rule</field>
    <field name="model_id" ref="model_op_attendance_sheet" />
    <field name="groups" eval="[(4, ref('openeducat_attendance.group_attendance_teacher'))]" />
    <field name="domain_force">[('faculty_id.emp_id.user_id', '=', user.id)]</field>
  </record>

</odoo>