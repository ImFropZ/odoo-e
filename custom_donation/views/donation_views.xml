<odoo>
  <data>
    <record model="ir.ui.view" id="donation_tree_view">
      <field name="name">Donation Tree View</field>
      <field name="model">custom_donation.donation</field>
      <field name="arch" type="xml">
        <tree>
          <field name="donor_name" />
          <field name="amount" />
          <field name="donation_date" />
          <field name="status" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="donation_form_view">
      <field name="name">Donation Form View</field>
      <field name="model">custom_donation.donation</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="donor_name" />
              <field name="amount" />
              <field name="donation_date" />
              <field name="payment_method" />
              <field name="status" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="donation_action">
      <field name="name">Donations</field>
      <field name="res_model">custom_donation.donation</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_donation_root" name="Donations" />
    <menuitem id="menu_donation" name="Donations" parent="menu_donation_root"
      action="donation_action" />
  </data>
</odoo>