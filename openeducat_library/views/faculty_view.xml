<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_faculty_form_library_inherit" model="ir.ui.view">
            <field name="name">op.faculty.form.library.inherit</field>
            <field name="model">op.faculty</field>
            <field name="inherit_id" ref="openeducat_core.view_op_faculty_form" />
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page name="library" string="Library">
                        <group>
                            <field name="library_card_id" />
                        </group>
                    </page>
                </notebook>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="btn oe_stat_button"
                        type="object"
                        name="count_media_movement_lines"
                        style="border-right: 1px solid;"
                        icon="fa-file">
                        <field string="Media" name="media_movement_lines_count" widget="statinfo" />
                    </button>
                </xpath>

                <xpath expr="//sheet" position="inside">
                    <div
                        style="background-color: #eee; padding-top: 0.25rem; padding-bottom: 0.25rem; padding-left:
          0.75rem;padding-right: 0.75rem; margin-top: 0.5rem; border-radius: 0.25rem; min-width:
          22rem; margin: 0.5rem auto; max-width: 55rem;">
                        <h2 style="font-weight: 700;">Library</h2>
                        <div
                            style="padding-top: 0.25rem;padding-bottom: 0.25rem; padding-left: 0.5rem;padding-right: 0.5rem;
          margin-top: 0.5rem;margin-bottom: 0.5rem; width: 100%; border-radius: 0.25rem;
          border-width: 1px; border-color: #000000; ">
                            Library Card : <field name="library_card_id" style="flex-grow: 1;" />
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>